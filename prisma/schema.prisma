generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  SPECIALIST
  ADMIN
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  passwordHash String
  role         Role?
  isActive     Boolean @default(true)

  profile UserProfile?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customerRequests Request[] @relation("CustomerRequests")
  assignedRequests Request[] @relation("AssignedRequests")
}

model UserProfile {
  id     String @id @default(uuid())
  userId String @unique

  username  String? @unique
  fullName  String?
  phone     String?
  avatarUrl String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum RequestStatus {
  OPEN
  ASSIGNED
  COMPLETED
  CANCELLED
}

model Request {
  id           String        @id @default(uuid())
  title        String
  description  String
  pricePerHour Int
  status       RequestStatus @default(OPEN)

  customerId String
  customer   User   @relation("CustomerRequests", fields: [customerId], references: [id])

  specialistId String?
  specialist   User?   @relation("AssignedRequests", fields: [specialistId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
